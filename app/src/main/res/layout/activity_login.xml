<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <TextView
            android:text="TimeToGo"
            android:layout_width="164dp"
            android:layout_height="48dp"
            android:textSize="35sp"
            android:id="@+id/titleTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/usernameTextView"/>
    <TextView
            android:text="Username"
            android:layout_width="105dp"
            android:layout_height="19dp"
            android:id="@+id/usernameTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.288"
            app:layout_constraintBottom_toTopOf="@+id/usernameTextField"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordTextView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameTextField" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.248"
    />
    <Button
            android:text="Login"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/forgottenPasswordTextView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/passwordTextField"
            app:layout_constraintVertical_bias="0.343"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameTextField" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="187dp"
    />
    <TextView
            android:text="Don't have an account?"
            android:layout_width="145dp"
            android:layout_height="21dp"
            android:id="@+id/noAccountTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/signUpTextView"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
    />
    <TextView
            android:text="Sign up here!"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/signUpTextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/noAccountTextView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp"/>
    <TextView
            android:text="Forgot your password?"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/forgottenPasswordTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/signUpTextView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="11"
            android:id="@+id/passwordTextField"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextView"/>

</android.support.constraint.ConstraintLayout>